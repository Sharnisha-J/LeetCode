class Solution {
    public static boolean canPlaceFlowers(int[] flowerbed,int n) {
		int count=0,zeros=1;
		for(int i=0;i<flowerbed.length;i++) {
			if(flowerbed[i]==0) {
				zeros++;
			}
			else {
				count+=(zeros-1)/2;
				zeros=0;
			}
		}
		zeros++;
        count+=(zeros-1)/2;
		if(count>=n) {
			return true;
		}
		else {
			return false;
		}
	}
}
