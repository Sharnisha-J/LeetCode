class Solution {
    public int trap(int[] height) {
        int n=height.length;
        int left=0,leftmax=Integer.MIN_VALUE;
        int right=n-1,rightmax=Integer.MIN_VALUE;
        int maxwater=0;
        while(left<right){
            leftmax=Math.max(leftmax,height[left]);
            rightmax=Math.max(rightmax,height[right]);
            if(leftmax<rightmax){
                maxwater+=leftmax-height[left];
                left++;
            }
            else{
                maxwater+=rightmax-height[right];
                right--;
            }
        }
        return maxwater;
    }
}
